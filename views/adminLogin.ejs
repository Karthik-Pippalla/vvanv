<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Login | Catering Dashboard</title>

    <!-- Bootstrap 5 -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- FontAwesome Icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />

    <!-- Custom Styles -->
    <style>
      body {
        background-color: #f4f7f6;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }
      .login-container {
        width: 100%;
        max-width: 400px;
        padding: 30px;
        background: #fff;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
      }
      .brand-title {
        font-size: 24px;
        font-weight: bold;
        text-align: center;
        margin-bottom: 20px;
        color: #333;
      }
      .password-toggle {
        cursor: pointer;
      }
      .error-message {
        animation: fadeIn 0.5s ease-in-out;
      }
      @keyframes fadeIn {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }
      .btn-loading {
        pointer-events: none;
        opacity: 0.7;
      }
    </style>
  </head>
  <body>
    <div class="login-container">
      <h3 class="brand-title">Admin Login</h3>

      <!-- Display Error Messages Dynamically -->
      <% if (error) { %>
      <div class="alert alert-danger error-message">
        <i class="fa fa-exclamation-circle"></i> <%= error %>
      </div>
      <% } %>

      <form action="/admin/login" method="POST" id="loginForm">
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input
            type="text"
            class="form-control"
            id="username"
            name="username"
            required
            placeholder="Enter Admin Username"
          />
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <div class="input-group">
            <input
              type="password"
              class="form-control"
              id="password"
              name="password"
              required
              placeholder="Enter Password"
            />
            <span
              class="input-group-text password-toggle"
              onclick="togglePassword()"
            >
              <i class="fa fa-eye" id="eyeIcon"></i>
            </span>
          </div>
        </div>

        <button type="submit" class="btn btn-primary w-100" id="loginBtn">
          <i class="fa fa-sign-in-alt"></i> Login
        </button>
      </form>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        console.log("‚úÖ JavaScript Loaded Successfully!");

        document
          .getElementById("loginForm")
          .addEventListener("submit", function (event) {
            event.preventDefault(); // Prevent default form submission

            const username = document.getElementById("username").value;
            const password = document.getElementById("password").value;

            console.log("üë§ Username:", username);
            console.log("üîë Password:", password);

            fetch("/admin/login", {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify({ username, password }),
            })
              .then((response) => response.text())
              .then((data) => {
                console.log("‚úÖ Server Response:", data);
                if (data.includes("Invalid credentials")) {
                  alert("Invalid login ka credentials!");
                } else {
                  console.log("‚úÖ logged in");
                  window.location.href = "/admin/dashboard";
                }
              })
              .catch((error) => console.error("‚ùå Error:", error));
          });
      });
    </script>
  </body>
</html>
